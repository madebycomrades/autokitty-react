{
  "name": "autokitty",
  "version": "0.0.1",
  "description": "This kitty sorts out your complicated group expenses",
  "scripts": {
    "postinstall": "jspm install",
    "start": "npm run bundle && npm run server",
    "dev:start": "NODE_ENV=development PORT=3000 DB=$(./scripts/db-uri)/autokitty npm run server",
    "server": "babel-node --stage 0 index.js",
    "watch": "nodemon --ext js,json,hbs --exec 'npm run dev:start'",
    "jspm": "jspm",
    "bundle": "jspm bundle-sfx main public/main.bundle.js",
    "db:pull": "docker pull klaemo/couchdb:1.6.1",
    "db:up": "./scripts/db-up",
    "db:down": "./scripts/db-down",
    "db:browse": "open http://$(boot2docker ip):5984/_utils/fauxton/",
    "db:attach": "docker attach autokitty",
    "db:fixtures": "babel-node --stage 0 db/scripts/fixtures.js",
    "db:design-doc": "babel-node --stage 0 db/scripts/design-doc.js"
  },
  "jspm": {
    "directories": {
      "baseURL": "public"
    },
    "dependencies": {
      "css": "github:systemjs/plugin-css@^0.1.10",
      "flummox": "npm:flummox@^4.0.0-alpha",
      "immutable": "npm:immutable@^3.7.2",
      "isomorphic-fetch": "npm:isomorphic-fetch@^2.0.2",
      "normalize.css": "github:necolas/normalize.css@^3.0.3",
      "react": "npm:react@^0.13.2",
      "react-router": "npm:react-router@^0.13.3",
      "react-style": "npm:react-style@^0.5.5",
      "shortid": "npm:shortid@^2.2.2",
      "to-slug-case": "npm:to-slug-case@^0.1.2"
    },
    "devDependencies": {
      "babel": "npm:babel-core@^5.1.13",
      "babel-runtime": "npm:babel-runtime@^5.1.13",
      "core-js": "npm:core-js@^0.9.4"
    }
  },
  "dependencies": {
    "babel": "^5.1.11",
    "co-body": "^1.2.0",
    "flummox": "^4.0.0-alpha",
    "handlebars": "^3.0.2",
    "immutable": "^3.7.2",
    "isomorphic-fetch": "^2.0.2",
    "jspm": "^0.15.5",
    "koa": "^0.19.1",
    "koa-route": "^2.4.1",
    "koa-static": "^1.4.9",
    "nodemon": "^1.3.7",
    "pouchdb": "^3.4.0",
    "pouchdb-upsert": "^1.1.1",
    "react": "^0.13.2",
    "react-router": "^0.13.3",
    "shortid": "^2.2.2",
    "to-slug-case": "^0.1.2"
  },
  "registry": "jspm",
  "engines": {
    "iojs": "2.0.0",
    "npm": "2.9.0"
  }
}
